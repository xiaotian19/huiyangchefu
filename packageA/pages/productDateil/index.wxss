page {
  background: #f7f7f7;
}


/* 轮播图 */

.tui-banner-swiper {
  position: relative;
}

.tui-tag-banner {
  position: absolute;
  color: #fff;
  bottom: 30rpx;
  right: 0;
}

.tui-slide-image {
  width: 100%;
  display: block;
}


/* s商品信息 */

.tui-pro-detail {
  box-sizing: border-box;
  color: #333;
  position: relative;
}

.tui-product-title {
  background: #fff;
  padding: 40rpx 0;
}

.tui-border-radius {
  border-bottom-left-radius: 24rpx;
  border-bottom-right-radius: 24rpx;
  overflow: hidden;
}

.tui-pro-pricebox {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #ff201f;
  font-size: 36rpx;
  font-weight: bold;
  line-height: 44rpx;
}

.tui-pro-price {
  display: flex;
  align-items: center;
}

.tui-padding {
  padding: 0 30rpx;
  box-sizing: border-box;
}


.tui-scale {
  transform: scale(0.7);
  transform-origin: center center;
  line-height: 24rpx;
  font-weight: normal;
}

.tui-gray {
  color: #999;
}

.tui-line-through {
  text-decoration: line-through;
}

.tui-pro-titbox {
  font-size: 32rpx;
  font-weight: 500;
  position: relative;
  padding: 0 30rpx 0 30rpx;
  box-sizing: border-box;
}

.tui-pro-address {
  font-size: 26rpx;
  color: #a3a3a3;
  position: absolute;
  right: 20rpx;
  top: 40rpx;
  padding: 0 30rpx 0 30rpx;
}


.tui-original-price {
  font-size: 22rpx;
  line-height: 26rpx;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}

.tui-nomore-box {
  padding-top: 10rpx;
}


.tui-product-img {
  transform: translateZ(0);
}

.tui-product-img image {
  width: 100%;
  display: block;
}

.tui-safearea-bottom {
  width: 100%;
  height: env(safe-area-inset-bottom);
}

.x-bottom {
  width: 100%;
  height: 10rpx;
  margin-bottom: 100rpx;
}


/* 底部操作栏 */

.x-operating {
  width: 100%;
  height: 110rpx;
  position: fixed;
  z-index: 99999;
  bottom: 0;
  background-color: #fff;
  justify-content: center;
  align-items: center;
  box-shadow: 5rpx 0 5rpx rgb(116, 116, 116);
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.x-operating_btn {
  width: 400rpx;
  height: 60rpx;
  border-radius: 100rpx;
  background-color: #3963BC;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
}