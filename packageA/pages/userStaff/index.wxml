<view class="container">
	<view class="tui-bg-box">
		<image src="/static/images/bg_login.png" class="tui-bg-img"></image>
		<view class="AvatarUrl">
			<open-data type="userAvatarUrl" class="tui-photo"></open-data>
		</view>
		<open-data class="tui-login-name" type='userNickName'></open-data>
	</view>
	<form bindsubmit="submitInfo">
		<view class="tui-login-from">
			<view class="tui-line-cell tui-top28">
				<tui-icon name="people" size="20" color='#5677fc'></tui-icon>
				<input placeholder-class="phcolor" class="tui-input" name="name" placeholder="请输入姓名" />
			</view>
			<view class="tui-line-cell">
				<tui-icon name="mobile" size="20" color='#5677fc'></tui-icon>
				<input placeholder-class="phcolor" class="tui-input" name="phone" placeholder="请输入手机号码"  maxlength="11" type='number' />
			</view>
			<button form-type="submit" class="tui-btn-submit">
				<tui-button tui-button-class="tui-btn-inner">立即注册</tui-button>
			</button>
			<!-- <view class="tui-protocol" hover-class="opcity" hover-stay-time="150">点击"登录"即表示已同意
				<text class="tui-protocol-red" bindtap="protocol">《用户协议》</text>
			</view> -->
		</view>
	</form>
</view>