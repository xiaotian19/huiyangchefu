<wxs src='../../../utils/wxs/imgUrl.wxs' module='spliceImg'></wxs>
<wxs src='../../..//utils/wxs/money.wxs' module='money'></wxs>

<!-- 热门推荐 -->

<view class="tui-product-box" wx:if='{{ productList }}'>
	<view class="tui-product-list">
		<view class="tui-product-container">
			<block wx:for="{{ productList }}" wx:key="index" wx:if="{{(index+1)%2!=0}}">
				<template is="productItem" data="{{item,index:index}}" />
			</block>
		</view>
		<view class="tui-product-container">
			<block wx:for="{{productList}}" wx:key="index" wx:if="{{(index+1)%2==0}}">
				<template is="productItem" data="{{item,index:index}}" />
			</block>
		</view>
	</view>
</view>

<!-- 热门推荐 -->

<!-- 无数据显示 -->
	<view  class='noData' wx:else>
	  <x-tips fixed="{{ false }}" imgUrl="/static/images/noData.png" >无商品数据~</x-tips>
	</view>
<!-- 无数据显示 -->


<!--模板-->
<template name="productItem">
	<!--商品列表-->
	<navigator open-type="navigate" url="{{ item.isUpgrade ? '':'/packageA/pages/productDateil/index?id='+item.id}}" class="tui-pro-item" hover-class="hover" hover-start-time="150" >
		<image src="{{ spliceImg.imgUrl(item.img) }}" class="tui-pro-img" mode="widthFix" />
		<view class="tui-pro-content">
			<view class="tui-pro-tit">{{item.name}}</view>
			<view>
				<view class="tui-pro-price">
					<text class="tui-sale-price">￥{{ money.Format(item.payment,2)}}</text>
					<text class="tui-factory-price">￥{{ money.Format(item.price,2)}}</text>
				</view>
				<view class="tui-pro-pay">{{item.sale}}人付款</view>
			</view>
			<view wx:if='{{ item.isUpgrade }}' class="pro-btn" catchtap="tapUpgradeCoupon" data-id="{{ item.id }}">升级</view>
		</view>
	</navigator>
	<!--商品列表-->
</template>
