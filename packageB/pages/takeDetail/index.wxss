
page{
  background-color: #f7f7f7;
}

.dateTime{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  align-items: center;
  position: sticky;
  top: 0;
  background-color: #fff;
}

.dateInput{
  width: 400rpx;
  height: 50rpx;
  border: 1rpx solid #cccccc;
  border-radius: 20rpx;
  padding: 5rpx 20rpx;
  background-color: #fff;
  font-size: 23rpx;
  text-align: center;
  margin: 30rpx 0;
}

.dateBtn{
  width: 150rpx;
  height: 60rpx;
  background-color: #5677FC;
  color: #fff;
  font-size: 23rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
  margin: 30rpx 0;
}

.take_info_number {
  width: 95%;
  height: 50rpx;
  font-size: 24rpx;
  line-height: 50rpx;
  padding-left: 5%;
  background-color: #fff;
}

.take_detail{
  width: 90%;
  height: 150rpx;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 20rpx;
}

.take_img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.take_info{
  width: 65%;
  height: 100%;
}


.take_info_name{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 25rpx;
  font-size: 24rpx;
}

.take_info_time{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  padding-left: 25rpx;
  font-size: 22rpx;
  color: #a3a3a3;
}

.take_money{
  width: 30%;
  height: 100%;
  justify-content: center;
  align-items: center;
}

/* 无数据 */

.noData{
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}