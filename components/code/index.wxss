.codeBack {
  position: fixed;
  top: 0;
  z-index: 10;
  background-color: #444;
  opacity: 0.5;
}

.code {
  position: fixed;
  top: 0;
  z-index: 10;
  display: flex;
  justify-content: center;
  align-items: center;
}

.code_item {
  width: 600rpx;
  height: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  background-color: #fff;
  border-radius: 20rpx;
}

.code_item .image {
  width: 85%;
  height: 70%;
}

.code_item .but {
  width: 80%;
  height: 80rpx;
  border-radius: 20rpx;
  background-color: #3963BC;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  font-size: 26rpx;
}

.code_item .title {
  width: 100%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #a3a3a3;
}

/* 从下往上动画效果 */

@keyframes bounceInUp {
  0% {
    transform: translateY(3000rpx);
  }

  100% {
    transform: translateY(0rpx);
  }
}

.bounceInUp {
  animation: bounceInUp 0.5s;
}

/* 从下往上动画效果关闭 */

@keyframes bounceInUpOver {
  0% {
    transform: translateY(0);
  }

  100% {
    transform: translateY(3000rpx);
  }
}

.bounceInUpOver {
  animation: bounceInUpOver 1s;
}
