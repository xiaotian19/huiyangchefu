
/* 定位门店 */

.stores{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-evenly;
  align-items: center;
}

.storeImg{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.storeInfo{
  width: 370rpx;
  height: 70%;
  display: flex;
  flex-direction: column;
  align-content: space-between;
  justify-content: space-evenly;
}

.storeInfo .title{
  color: #2e2e2e;
  font-size: 28rpx;
}

.storeInfo .address{
  color: #858585;
  font-size: 22rpx;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.storeBtn{
  width: 260rpx;
  height: 70%;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: space-evenly;
}

.storeBtn > view{
  width: 110rpx;
  height: 60rpx;
  font-size: 22rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-evenly;
  align-items: center;
}

/* 轮播图 */
.goods-swiper {
  position: relative;
  width: 100%;
}

.swiper{
  height: 400rpx;
  position: relative;
}

.swiper-image{
  width: 100%;
  height: 100%;
}

/* 标识 */

 .indicator-dots {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 5rpx 15rpx;
  border-radius: 30rpx;
  color: #fff;
  font-size: 28rpx;
}

.indicator-dots text {
  padding: 0rpx 5rpx;
}

/* 搜索 */

.search{
  width: 600rpx;
  margin: 40rpx auto;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search input{
  width: 380rpx;
  height: 50rpx;
  border: 2rpx solid #a2a2a2;
  border-radius: 10rpx;
  padding: 5rpx 15rpx;
  line-height: 60rpx;
  margin-right: 25rpx;
}


/* 商品 */


/* 热门推荐 */

.tui-group-name {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  padding: 35rpx 0;
  margin-top: 20rpx;
}


.tui-product-box {
  margin-top: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #f7f7f7;
}


.tui-product-category {
  background: #fff;
  padding: 80rpx 20rpx 30rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  font-size: 24rpx;
  color: #555;
  margin-bottom: 20rpx;
}


.tui-product-list {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
  box-sizing: border-box;
  /* padding-top: 20rpx; */
}

.tui-product-container {
  flex: 1;
  margin-right: 2%;
}

.tui-product-container:last-child {
  margin-right: 0;
}


.tui-pro-item {
  width: 100%;
  margin-bottom: 4%;
  background: #fff;
  box-sizing: border-box;
  border-radius: 12rpx;
  overflow: hidden;
}

.tui-pro-img {
  width: 100%;
  display: block;
}

.tui-pro-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 20rpx;
}

.tui-pro-tit {
  color: #2e2e2e;
  font-size: 26rpx;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.tui-pro-price {
  padding-top: 18rpx;
}

.tui-sale-price {
  font-size: 30rpx;
  font-weight: 500;
  color: #e41f19;
}

.tui-factory-price {
  font-size: 22rpx;
  color: #a0a0a0;
  text-decoration: line-through;
  padding-left: 12rpx;
}

.tui-pro-pay {
  padding-top: 10rpx;
  font-size: 24rpx;
  color: #656565;
}


/* 无数据 */

.noData{
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}


